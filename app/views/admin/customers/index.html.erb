<h1>会員一覧</h1>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |c| %>
    <tr>
      <td><%= c.id %></td>
      <td><%= link_to c.full_name, admin_customer_path(c) %></td>
      <td><%= c.email %></td>
      <td><%= c.status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @customers %>
