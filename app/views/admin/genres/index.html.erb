<h1>ジャンル一覧・追加</h1>
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
<span>ジャンル名</span>
<%= f.text_field :name, placeholder: "ジャンル名" %>
<%= f.submit "新規登録" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |g| %>
    <tr>
      <td><%= g.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(g) %> </td>
    </tr>
    <% end %>
  </tbody>
</table>