<div>
  <%= f.label :image, "商品画像" %>
  <%= f.file_field :image %>
</div>

<div>
  <%= f.label :name, "商品名" %>
  <%= f.text_field :name, placeholder: "商品名" %>
</div>

<div>
  <%= f.label :introduction, "商品説明" %>
  <%= f.text_area :introduction, placeholder: "ここに説明文を記入します" %>
</div>

<div>
  <%= f.label :genre_id, "ジャンル" %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
</div>

<div>
  <%= f.label :price, "税抜価格" %>
  <%= f.text_field :price, placeholder: "1000" %>円
</div>

<div>
  <%= f.label :is_active, "販売ステータス" %>
  <% [true, false].each do |st| %>
    <%= f.radio_button :is_active, st %>
    <%= f.label :is_active, @item.get_status_string(st) %>
  <% end %>
</div>