<h1>商品一覧</h1>
<%= link_to "+", new_admin_item_path %>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |i| %>
    <tr>
      <td><%= i.id %></td>
      <td><%= link_to i.name, admin_item_path(i) %></td>
      <td><%= i.price.to_s(:delimited) %></td>
      <td><%= i.genre.name %></td>
      <td><%= i.status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>