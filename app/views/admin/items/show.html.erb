<%= render "layouts/section", title: "商品詳細" %>
<div class="row">
  <div "m-3">
    <%= image_tag @item.get_image(300, 200) %>
  </div>
  <div>
    <table class="table m-3 table-borderless">
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格(税抜価格)</td>
        <td><%= "#{@item.tax_included_price.to_s(:delimited)}(#{@item.price.to_s(:delimited)}) 円" %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td><%= render "status", item: @item %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-12 text-center">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
  </div>
</div>