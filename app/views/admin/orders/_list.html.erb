<%= render "layouts/section", title: title %>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th>購入日時</th>
      <% if show_customer %>
      <th>購入者</th>
      <% end %>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% orders.each do |od| %>
    <tr>
      <td><u><%= link_to od.created_at.strftime('%Y/%m/%d %T'), admin_order_path(od), class:"text-dark underline" %></u></td>
      <% if show_customer %>
      <td><%= od.customer.full_name %></td>
      <% end %>
      <td><%= od.amount %></td>
      <td><%= od.od_status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate orders %>
