<%= render "layouts/section", title: "管理者ログイン" %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-inline my-2">
    <%= f.label :email, "メールアドレス", class: "col-3" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-6" %>
  </div>

  <div class="field form-inline my-2">
    <%= f.label :password, "パスワード", class: "col-3"  %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-6" %>
  </div>

  <div class="actions my-2">
    <%= f.submit "ログイン", class: "btn btn-primary offset-3" %>
  </div>
<% end %>
