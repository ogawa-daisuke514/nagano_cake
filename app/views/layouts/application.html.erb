<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>
        <%= link_to (admin_signed_in? ? admin_root_path : root_path) do %>
          LOGO
        <% end %>
      </h1>
      <div>
        <% if admin_signed_in? %>
          <nav>
            <div><%= link_to "商品一覧", admin_items_path %></div>
            <div><%= link_to "会員一覧", admin_customers_path %></div>
            <div><%= link_to "注文履歴一覧", admin_orders_path %></div>
            <div><%= link_to "ジャンル一覧", admin_genres_path %></div>
            <div><%= link_to "ログアウト", destroy_admin_session_path, method: :delete  %></div>
          </nav>
          <!-- admin用検索-->
          <div>
            <%= form_with url: items_search_path, method: :get, local: true do |f| %>
              <%= f.text_field :search_word, placeholder: "商品名で検索" %>
              <%= f.submit "検索" %>
            <% end %>
          </div>
        <% elsif customer_signed_in? %>
          <div>
            <%= "ようこそ、#{current_customer.last_name} さん" %>
          </div>
          <nav>
            <div><%= link_to "マイページ", my_page_path %></div>
            <div><%= link_to "商品一覧", items_path %></div>
            <div><%= link_to "カート", cart_items_path %></div>
            <div><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></div>
          </nav>
          <div>
            <%= form_with url: items_search_path, method: :get, local: true do |f| %>
              <%= f.text_field :search_word, placeholder: "商品名で検索" %>
              <%= f.submit "検索" %>
            <% end %>
          </div>
        <% else %>
          <nav>
            <div><%= link_to "About", about_path %></div>
            <div><%= link_to "商品一覧", items_path %></div>
            <div><%= link_to "新規登録", new_customer_registration_path %></div>
            <div><%= link_to "ログイン", new_customer_session_path %></div>
          </nav>
          <div>
            <%= form_with url: items_search_path, method: :get, local: true do |f| %>
              <%= f.text_field :search_word, placeholder: "商品名で検索" %>
              <%= f.submit "検索" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </header>
    <main>
      <p><%= flash.now[:alert] %></p>
      <p><%= flash.now[:notice] %></p>
      <%= yield %>
    </main>
    <footer>
    </footer>
  </body>
</html>
