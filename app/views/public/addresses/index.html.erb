<h2>配送先登録/一覧</h2>
<div>
<%= form_with model: @address, url: addresses_path, method: :post %>
  <%= render "form", f: f %>
  <%= f.submit "新規登録" %>
<% end %>
</div>
<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% current_customer.addresses.each do |ad| %>
    <tr>
      <td><%= ad.postal_code %></td>
      <td><%= ad.address %></td>
      <td><%= ad.name %></td>
      <td><%= link_to "編集する", edit_address_path(ad) %></td>
      <td><%= link_to "削除する", address_path(ad), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
