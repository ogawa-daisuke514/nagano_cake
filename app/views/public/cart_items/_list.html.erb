<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <% if editable %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% current_customer.cart_items.each do |ci| %>
    <tr>
      <td><%= image_tag ci.item.get_image(60, 40) %><%= ci.item.name %></td>
      <td><%= ci.item.tax_included_price.to_s(:delimited) %></td>
      <td>
      <% if editable %>
        <%= form_with model: ci, url: cart_item_path(ci), method: :patch, local: true do |f| %>
          <%= f.select :amount, *[1..(ci.amount+ci.amount_diff_max)] %>
          <%= f.submit "変更" %>
        <% end %>
      <% else %>
        <%= ci.amount %>
      <% end %>
      </td>
      <td><%= ci.subtotal.to_s(:delimited) %></td>
      <% if editable %>
        <td><%= link_to "削除する", cart_item_path(ci), method: :delete %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>