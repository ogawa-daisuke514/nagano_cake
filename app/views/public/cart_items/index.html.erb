<div class="row">
  <%= render "layouts/section", title: "ショッピングカート" %>
  <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger ml-auto my-auto d-inline" %>
</div>
<%= render "list", editable: true %>
<% emp = current_customer.cart_items.empty? %>
<% if emp %>
<div>カート内にまだ商品がありません。</div>
<% end %>
<div class="row">
  <%= link_to "買い物を続ける", root_path, class: "btn btn-primary my-auto ml-4" %>
  <table class="table table-bordered col-3 ml-auto mr-3">
    <tr>
      <th class="bg-light">合計金額</th>
      <td><%= current_customer.cart_total.to_s(:delimited) %></td>
    </tr>
  </table>
</div>
<div class="text-center">
  <% if emp %>
    <a class="btn btn-secondary disabled" href="#" role="button" disabled>情報入力に進む</a>
  <% else %>
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
  <% end %>
</div>