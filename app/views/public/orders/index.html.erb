<h2>注文履歴一覧</h2>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% current_customer.orders.each do |od| %>
    <tr>
      <td><%= od.created_at.strftime("%Y/%m/%d")%></td>
      <td>
        <%= "〒#{od.postal_code}" %><br>
        <%= od.address %><br>
        <%= od.name %>
      </td>
      <td>
        <% od.order_items.size.times do |i| %>
          <% if i > 0 %> <br> <% end %>
          <%= od.order_items[i].item.name %>
        <% end %>
      </td>
      <td><%= od.total_fee.to_s(:delimited) + "円" %></td>
      <td><%= od.od_status %></td>
      <td><%= link_to "表示する", order_path(od) %></td>
    </tr>
    <% end %>
  </tbody>
</table>