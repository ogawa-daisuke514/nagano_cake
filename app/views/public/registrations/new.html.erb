<h2>新規会員登録</h2>
<div>
  <%= form_with(model:@customer, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <span>名前</span>
      <%= f.label :last_name, "(姓)" %>
      <%= f.text_field :last_name, autofocus: true, placeholder: "長野", autocomplete: "last_name" %>
      <%= f.label :first_name, "(名)" %>
      <%= f.text_field :first_name, placeholder: "惠喜", autocomplete: "first_name" %>
    </div>
    <div>
      <span>フリガナ</span>
      <%= f.label :last_name_kana, "(セイ)" %>
      <%= f.text_field :last_name_kana, placeholder: "ナガノ", autocomplete: "last_name_kana" %>
      <%= f.label :first_name_kana, "(メイ)" %>
      <%= f.text_field :first_name_kana, placeholder: "ケイキ", autocomplete: "first_name_kana" %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, placeholder: "mail@example.com", autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code, placeholder: "1234567", autocomplete: "postal_code" %>
    </div>

    <div class="field">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address, placeholder: "東京都千代田区千代田1-1", autocomplete: "address" %>
    </div>

    <div class="field">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
      <%= f.text_field :telephone_number, placeholder: "09012345678", autocomplete: "telephone_number" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード(6文字以上)" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード(確認用)" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
</div>
<h2>既に登録済みの方</h2>
<p>
  <span><%= link_to "こちら", new_customer_session_path %></span>からログインしてください。
</p>
