<%= render "layouts/section", title: "新規会員登録" %>
<div>
  <%= form_with(model:@customer, url: registration_path(resource_name)) do |f| %>
    <%= render "layouts/error_messages", resource: resource %>

    <div class="field row form-inline m-2">
      <div class="col-2">名前</div>
      <%= f.label :last_name, "(姓)", class: "col-1 text-right" %>
      <%= f.text_field :last_name, autofocus: true, placeholder: "長野", autocomplete: "last_name", class: "form-control mr-2" %>
      <%= f.label :first_name, "(名)", class: "col-1 text-right" %>
      <%= f.text_field :first_name, placeholder: "惠喜", autocomplete: "first_name", class: "form-control" %>
    </div>
    <div class="field row form-inline m-2">
      <div class="col-2">フリガナ</div>
      <%= f.label :last_name_kana, "(セイ)", class: "col-1 text-right" %>
      <%= f.text_field :last_name_kana, placeholder: "ナガノ", autocomplete: "last_name_kana", class: "form-control mr-2" %>
      <%= f.label :first_name_kana, "(メイ)", class: "col-1 text-right" %>
      <%= f.text_field :first_name_kana, placeholder: "ケイキ", autocomplete: "first_name_kana", class: "form-control" %>
    </div>

    <div class="field row form-inline m-2">
      <%= f.label :email, "メールアドレス", class: "col-3 justify-content-start" %>
      <%= f.email_field :email, placeholder: "mail@example.com", autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field row form-inline m-2">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3 justify-content-start" %>
      <%= f.text_field :postal_code, placeholder: "1234567", autocomplete: "postal_code", class: "form-control" %>
    </div>

    <div class="field row form-inline m-2">
      <%= f.label :address, "住所", class: "col-3 justify-content-start" %>
      <%= f.text_field :address, placeholder: "東京都千代田区千代田1-1", autocomplete: "address", class: "form-control col-6" %>
    </div>

    <div class="field row form-inline m-2">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-3 justify-content-start" %>
      <%= f.text_field :telephone_number, placeholder: "09012345678", autocomplete: "telephone_number", class: "form-control" %>
    </div>

    <div class="field row form-inline m-2">
      <%= f.label :password, "パスワード(6文字以上)", class: "col-3 justify-content-start" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="actions text-center">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
<%= render "layouts/section", title: "既に登録済みの方" %>
<p class="m-3">
  <span class="mx-1"><%= link_to "こちら", new_customer_session_path %></span>からログインしてください。
</p>
